<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".driver_forgot">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:src="@drawable/goods_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#e2e2e2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/fonts"
        android:text="Reset password"
        android:textColor="@color/primary_purple"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/driverF_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="324dp"
        android:autofillHints=""
        android:background="@drawable/edittext_grey"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="4dp"
        android:paddingEnd="3dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        tools:ignore="TextContrastCheck" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/driverF_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn"
            android:text="Reset"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="23sp"
            android:onClick="reset"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/driverF_loading"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loading"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/driverF_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/red"
            android:visibility="gone"
            />
    </FrameLayout>

</RelativeLayout>